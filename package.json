{
  "name": "strinfo",
  "displayName": "strinfo",
  "description": "Annotating custom strings in your code.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.94.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [ "onStartupFinished" ],
  "main": "./extension.js",
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
	"contributes": {
		"configuration": {
			"title": "strinfo",
			"properties": {
				"strinfo.mappings": {
					"type": "object",
					"default": {
						"some string": "some output"
					},
					"description": "A map of strings and their description."
				},
        "strinfo.showStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show the string info in the status bar."
        },
        "strinfo.showTooltip": {
          "type": "boolean",
          "default": true,
          "description": "Show the string info as a tooltip on hover."
        },
        "strinfo.showCodelens": {
          "type": "boolean",
          "default": true,
          "description": "Show the string info as CodeLens."
        }
			}
		}
	},
  "devDependencies": {
    "@types/vscode": "^1.94.0",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "eslint": "^9.13.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
